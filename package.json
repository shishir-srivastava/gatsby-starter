{
    "name": "shishir.dev",
    "version": "1.0.0",
    "description": "Personal blog of Shishir Srivastava",
    "author": "Shishir Srivastava <mail@shishir.dev>",
    "license": "MIT",
    "private": true,
    "scripts": {
        "build": "rm -rf public && rm -rf .cache && gatsby build",
        "develop": "gatsby develop",
        "format": "prettier --write src/**/*.{js,jsx,json,css,md}",
        "start": "yarn run develop",
        "serve": "gatsby serve",
        "lint": "eslint --ext .js,.jsx --fix . && stylelint src/**/*.css --fix",
        "test": "echo \"Write tests! -> https://gatsby.dev/unit-testing\""
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/shishir-srivastava/shishir.dev"
    },
    "bugs": {
        "url": "https://github.com/shishir-srivastava/shishir.dev/issues"
    },
    "dependencies": {
        "react": "^16.8.6",
        "react-dom": "^16.8.6"
    },
    "devDependencies": {
        "eslint": "^6.1.0",
        "eslint-config-prettier": "^6.0.0",
        "eslint-loader": "^2.2.1",
        "eslint-plugin-prettier": "^3.1.0",
        "eslint-plugin-react": "^7.14.3",
        "gatsby": "^2.13.39",
        "gatsby-plugin-eslint": "^2.0.5",
        "gatsby-plugin-postcss": "^2.1.2",
        "gatsby-plugin-stylelint": "^3.2.0",
        "husky": ">=1",
        "lint-staged": ">=8",
        "postcss-css-variables": "^0.13.0",
        "postcss-import": "^12.0.1",
        "postcss-nested": "^4.1.2",
        "postcss-preset-env": "^6.7.0",
        "prettier": "^1.18.2",
        "stylelint": "^10.1.0",
        "stylelint-config-prettier": "^5.2.0",
        "stylelint-prettier": "^1.1.1",
        "stylelint-webpack-plugin": "^0.10.5"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,jsx}": [
            "eslint --fix",
            "git add"
        ],
        "*.css": [
            "stylelint --fix",
            "git add"
        ],
        "*.{json,md}": [
            "prettier --write",
            "git add"
        ]
    }
}
